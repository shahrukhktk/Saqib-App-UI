<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            tools:context=".Fragments.MainBatteryFragment"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                app:cardUseCompatPadding="true"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:elevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_notificaitons"
                        android:text="Battery Monitor"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="8dp" />


                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/donut_progress"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp"
                        app:donut_progress="49"
                        app:donut_text_size="25sp"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        tools:layout_editor_absoluteX="-3dp" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="2dp"
                        android:gravity="end"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/donut_progress"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remaining Time"
                            android:layout_gravity="end"
                            android:textSize="10sp"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp"
                            >

                            <TextView
                                android:id="@+id/textViewdd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                android:drawableStart="@drawable/ic_dropdown"
                                android:drawableTint="@android:color/holo_orange_dark"
                                />

                            <TextView
                                android:id="@+id/textViewdd2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" h "
                                android:textSize="12sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                android:drawableTint="@android:color/holo_orange_dark"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" m "
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DFDFDF"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="150dp"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12.51"
                                android:layout_marginTop="4dp"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                android:drawableTint="@android:color/holo_orange_dark"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" V "
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13.80"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                android:drawableTint="@android:color/holo_orange_dark"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" A "
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DFDFDF"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="150dp"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="37.3"
                                android:textSize="17sp"
                                android:textColor="@android:color/black"
                                android:drawableStart="@drawable/ic_thermo"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" C "
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/horizontal_custom_progress"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Status: Discharging"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/darker_gray"
                            />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:weightSum="3"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:elevation="2dp"
                    android:layout_weight="1.4"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:weightSum="5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_bulb"
                                app:tint="@android:color/black" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_anchor"
                                app:tint="@android:color/black"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_dropdown"
                            android:drawableTint="@android:color/holo_orange_dark"
                            android:text="13.80 A"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />



                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progressTint="@android:color/holo_orange_dark"
                            android:progressTintMode="multiply"
                            android:progress="80"
                            android:progressBackgroundTint="#FF9800"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="LIGHTS"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:elevation="2dp"
                    android:layout_weight="1.4"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:weightSum="5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_engine"
                                app:tint="@android:color/darker_gray"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_anchor"
                                app:tint="@android:color/darker_gray"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_bulb"
                            android:drawableTint="@android:color/holo_orange_dark"
                            android:text="- A"
                            android:textColor="@android:color/darker_gray"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="REFRIGERATOR"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/darker_gray"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:weightSum="3"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:elevation="2dp"
                    android:layout_weight="1.4"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:weightSum="5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_engine"
                                app:tint="@android:color/black" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_anchor"
                                app:tint="@android:color/darker_gray"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_dropdown"
                            android:drawableTint="@android:color/holo_orange_dark"
                            android:text="18.65 A"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:progress="70"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progressTint="@color/colorAccent"
                            android:progressTintMode="multiply"
                            android:progressBackgroundTint="#077DE4"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="GENERATOR"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:elevation="2dp"
                    android:layout_weight="1.4"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:weightSum="5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_engine"
                                app:tint="@android:color/black"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_stop"
                                app:tint="@android:color/black"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_bulb"
                            android:drawableTint="@android:color/holo_orange_dark"
                            android:text="- A"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="REFRIGERATOR"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="@android:color/darker_gray"
                android:text="Click to Reorder"
                android:drawableStart="@drawable/ic_reorder"
                android:drawablePadding="15dp"
                android:drawableTint="@android:color/darker_gray"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>

    </ScrollView>



</layout>